{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "module": "amd",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    // Update this to es2017 in the next release of the VS2015 TypeScript plugin
    "lib": [ "es2016", "dom" ],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "importHelpers": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/*.ts",
    "./test/**/*.ts",
    "./typings/**/*.d.ts",
    "./custom_typings/**/*.d.ts",
    "./aurelia_project/environments/**/*.ts"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}
